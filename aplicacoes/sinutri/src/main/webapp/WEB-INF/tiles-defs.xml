<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
    <!--
        Main definition that uses layout.html to put title and content attributes from Thymeleaf fragments;
        {1} will be evaluated to either 'list', 'form' or 'view'.
    -->
    <definition name="layoutPadrao" template="view/templates/layoutPadrao">
        <put-attribute name="head" value="head/{1}"/>
        <put-attribute name="content" value="content/{1}"/>
        <put-attribute name="footer" value="footer/{1}"/>
    </definition>
    <!--
        Fragments that are included by message/* definition above;
        'template' attribute is a template file stored in /WEB-INF/views/message folder;
        {1} will be evaluated to either 'list', 'form' or 'view'.
    -->
    <definition name="head/*" template="layoutPadrao/{1} :: head"/>
    <definition name="content/*" template="layoutPadrao/{1} :: content"/>
    <definition name="footer/*" template="layoutPadrao/{1} :: footer"/>
</tiles-definitions>
